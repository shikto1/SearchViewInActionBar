<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp"
    tools:context="shishirappstudio.com.searchviewinactionbar.StartActivity">
    <Button
        android:id="@+id/searchViewWith_NormalAdapter_Btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SerachView with Normal Adapter"
        android:textAllCaps="false"/>
    <Button
        android:id="@+id/searchViewWith_CustomAdapter_Btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SerachView with Custom Adapter"
        android:textAllCaps="false"/>

</LinearLayout>
